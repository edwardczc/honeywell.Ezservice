<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/switch_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:gravity="center"
        android:text="switch to broadcast way"/>
    <Button
        android:id="@+id/reboot_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="reboot device"/>
    <Button
        android:id="@+id/poweroff_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="poweroff device"/>
    <Button
        android:id="@+id/scan_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="scan settings"/>
    <Button
        android:id="@+id/get_sn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="get sn"/>
    <Button
        android:id="@+id/set_system_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="set system time"/>
    <Button
        android:id="@+id/set_statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="diable statubar"/>
    <Button
        android:id="@+id/enable_homekey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="diable homekey"/>
    <Button
        android:id="@+id/enable_usb_debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="enable usb debug"/>
    <Button
        android:id="@+id/silent_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="silent install"/>
    <Button
        android:id="@+id/silent_uninstall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="silent uninstall"/>
</LinearLayout>

</ScrollView>